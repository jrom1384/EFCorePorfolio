@model EmployeeVM
@{
    ViewData["Title"] = "Employee";
}

<h1 class="text-primary">Employee / @ViewBag.SaveMode </h1>
<hr />
<div class="alert alert-success alert-dismissible fade show">
    <h4 class="alert-heading"><i class="far fa-check-circle"></i> Success!</h4>
    <p>@ViewBag.Message</p>
    <hr>
    @if (TempData.ContainsKey(TempDataKeys.SaveMode) && (SaveMode)Convert.ToInt32(TempData[TempDataKeys.SaveMode]) == SaveMode.Delete)
    {
        <p class="mb-0">Click 'Back to List'.</p>
    }
    else
    {
        <p class="mb-0">To modify click the 'Edit' button or 'Back to List'.</p>
    }
    <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
    </dl>
</div>
<div>
    @if (TempData.ContainsKey(TempDataKeys.SaveMode) && (SaveMode)Convert.ToInt32(TempData[TempDataKeys.SaveMode]) != SaveMode.Delete)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <text>|</text>
    }
    <a asp-action="Index">Back to List</a>
</div>
