@page "{id}"
@model DeleteModel
@{
    ViewData["Title"] = "Department";
}

<h1 class="text-primary">Department / Delete</h1>
<hr />
@{
    if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
            <p> @Model.ErrorMessage</p>
            <hr>
            <p class="mb-0">Click 'Back to List' link.</p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
        <br />
    }
}
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Department)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Department.Id" />
        @if (string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <input type="submit" value="Delete" class="btn btn-danger" /> <text>|</text>
        }
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
