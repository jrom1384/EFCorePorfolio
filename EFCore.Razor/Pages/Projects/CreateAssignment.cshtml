@page
@model EFCore.Razor.Pages.Projects.CreateAssignmentModel
@{
    ViewData["Title"] = "Project";
}

<h1 class="text-primary">Project / @Model.Assignment.Project / Assign</h1>
<hr />
@{
    if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
            <p>@Model.ErrorMessage</p>
            <hr>
            <p class="mb-0">Once you have filled all the details, click on the 'Create' button to continue or 'Back to List'.</p>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-row">
                <input type="hidden" asp-for="Assignment.Project_Id" value="@Model.Assignment.Project_Id" />
                <input type="hidden" asp-for="Assignment.Project" value="@Model.Assignment.Project" />

                <div class="form-group col-12">
                    <label asp-for="Assignment.Employee_Id" class="control-label"></label>
                    <select asp-for="Assignment.Employee_Id" class="form-control" asp-items="@(new SelectList(Model.Employees, "Id", "Name"))">
                        <option value="" disabled selected>- Please Select - </option>
                    </select>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Assignment.Role_Id" class="control-label"></label>
                    <select asp-for="Assignment.Role_Id" class="form-control" asp-items="@(new SelectList(Model.Roles, "Id", "Role"))">
                        <option value="" disabled selected>- Please Select - </option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" /> |
                    <a asp-page="./Assignments" asp-route-id="@Model.Assignment.Project_Id">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>